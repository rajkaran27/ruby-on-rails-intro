<%= link_to('Back to Homepage',{controller:'main',action:'index'})%>
<h1>Tasks#index</h1>
<p>Find me in app/views/tasks/index.html.erb</p>
<%=
    link_to('Add New Task',new_task_path)

%>
<div>
  <h2>Tasks</h2>
  <% @tasks.each do |task|%>
    <p><%=task.position%></p>
    <p><%=task.name%></p>
    <p><%=task.completed? ? 'Yes' : 'No'%></p>
    <%= link_to('Show',task_path(task),class:'action show')%>
    <%= link_to('Edit',task_path(task),class:'action show')%>
    <%= link_to('Delete',task_path(task),class:'action show')%>
  <% end %>
</div>